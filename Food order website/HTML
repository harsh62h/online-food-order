  <script>
    const menu = [
      {id:1,name:'Margherita Pizza',desc:'Classic cheese pizza',price:299,img:'margherita pizza.jpg'},
      {id:2,name:'Paneer Butter Masala',desc:'Creamy paneer curry with naan',price:229,img:'paneer butter masala.jpg'},
      {id:3,name:'Veg Biryani',desc:'Spiced basmati rice with veggies',price:179,img:'veg biryani.jpg'},
      {id:4,name:'Grilled Chicken',desc:'Juicy grilled chicken with herbs',price:349,img:'grilled chicken.jpg'},
      {id:5,name:'French Fries',desc:'Crispy salted fries',price:89,img:'french fries.jpg'},
      {id:6,name:'Chocolate Brownie',desc:'Warm chocolate brownie',price:99,img:'choclate brownie.jpg'}
    ];
    const state = {cart:{},delivery:40};
    const format = v => '₹'+v.toFixed(2);

    // Render menu
    function renderMenu(){
      const el = document.getElementById('menuList');
      el.innerHTML = '';
      menu.forEach(it=>{
        const div = document.createElement('div');
        div.className='item';
        div.innerHTML = `
          <div class="thumb"><img src="${it.img}" alt="${it.name}" /></div>
          <div class="meta">
            <h3>${it.name}</h3>
            <p>${it.desc}</p>
            <div class="price">${format(it.price)}</div>
          </div>
          <div class="controls"><button class="btn small" data-id="${it.id}">Add</button></div>
        `;
        el.appendChild(div);
      });
      document.querySelectorAll('.btn.small[data-id]').forEach(btn=>{
        btn.addEventListener('click',()=>{
          const id = Number(btn.getAttribute('data-id'));
          addToCart(id);
        });
      });
    }

    function addToCart(id){
      const item = menu.find(m=>m.id===id);
      if(!item) return;
      if(state.cart[id]) state.cart[id].qty++;
      else state.cart[id] = {...item, qty:1};
      renderCart();
    }

    function changeQty(id, delta){
      if(!state.cart[id]) return;
      state.cart[id].qty += delta;
      if(state.cart[id].qty <= 0) delete state.cart[id];
      renderCart();
    }

    function renderCart(){
      const list = document.getElementById('cartList');
      list.innerHTML='';
      const keys = Object.keys(state.cart);
      if(keys.length===0){
        list.innerHTML='<div class="muted">Cart is empty — add items from the menu.</div>';
        document.getElementById('summary').style.display='none';
        return;
      }
      let subtotal=0;
      keys.forEach(k=>{
        const it=state.cart[k];
        subtotal+=it.price*it.qty;
        const row=document.createElement('div');
        row.className='cart-row';
        row.innerHTML=`
          <div>
            <div style="font-weight:700">${it.name}</div>
            <div class="muted">${format(it.price)} × ${it.qty}</div>
          </div>
          <div class="qty">
            <button class="btn small" data-action="dec" data-id="${it.id}">-</button>
            <div>${it.qty}</div>
            <button class="btn small" data-action="inc" data-id="${it.id}">+</button>
          </div>`;
        list.appendChild(row);
      });
      document.getElementById('subtotal').textContent=format(subtotal);
      document.getElementById('delivery').textContent=format(state.delivery);
      document.getElementById('total').textContent=format(subtotal+state.delivery);
      document.getElementById('summary').style.display='block';
      document.querySelectorAll('[data-action]').forEach(b=>{
        b.onclick=()=>{
          const id=Number(b.getAttribute('data-id'));
          const act=b.getAttribute('data-action');
          changeQty(id,act==='inc'?1:-1);
        };
      });
    }

    // Checkout modal
    const modal=document.getElementById('modal');
    document.getElementById('checkoutBtn').onclick=()=>modal.classList.add('active');
    document.getElementById('cancelBtn').onclick=()=>modal.classList.remove('active');

    document.getElementById('orderForm').onsubmit=e=>{
      e.preventDefault();
      const name=document.getElementById('name').value.trim();
      const phone=document.getElementById('phone').value.trim();
      const address=document.getElementById('address').value.trim();
      const payment=document.getElementById('payment').value;
      const items=Object.values(state.cart).map(it=>({name:it.name,qty:it.qty,price:it.price}));
      if(items.length===0){alert('Cart is empty');return;}
      const subtotal=Object.values(state.cart).reduce((s,i)=>s+i.price*i.qty,0);
      const order={
        id:Date.now(),
        name,phone,address,payment,items,
        subtotal,delivery:state.delivery,total:subtotal+state.delivery,
        status:'Pending',createdAt:new Date().toLocaleString()
      };
      const orders = JSON.parse(localStorage.getItem('orders')||'[]');
      orders.push(order);
      localStorage.setItem('orders',JSON.stringify(orders));
      alert('Order placed! (demo)\nSaved to Admin Panel.');
      modal.classList.remove('active');
      state.cart={};
      renderCart();
      e.target.reset();
    };

    // Admin panel
    function renderAdmin(){
      const list=document.getElementById('ordersList');
      const orders=JSON.parse(localStorage.getItem('orders')||'[]');
      list.innerHTML='';
      if(orders.length===0){list.innerHTML='<div class="muted">No orders yet.</div>';return;}
      orders.reverse().forEach(o=>{
        const div=document.createElement('div');
        div.style.marginBottom='14px';
        div.style.padding='10px';
        div.style.border='1px solid rgba(255,255,255,0.08)';
        div.style.borderRadius='8px';
        div.innerHTML=`
          <div><b>${o.name}</b> — ${o.phone}</div>
          <div class="muted">${o.address}</div>
          <div class="muted">Payment: ${o.payment} | Date: ${o.createdAt}</div>
          <div style="margin:6px 0">
            ${o.items.map(i=>`${i.name} × ${i.qty}`).join(', ')}
          </div>
          <div>Total: <b>${format(o.total)}</b></div>
          <div>Status: <b>${o.status}</b></div>
          <button class="btn small" data-id="${o.id}">${o.status==='Pending'?'Mark Delivered':'Mark Pending'}</button>
        `;
        list.appendChild(div);
      });
      list.querySelectorAll('[data-id]').forEach(btn=>{
        btn.onclick=()=>{
          const id=Number(btn.getAttribute('data-id'));
          toggleStatus(id);
        };
      });
    }

    function toggleStatus(id){
      const orders=JSON.parse(localStorage.getItem('orders')||'[]');
      const i=orders.findIndex(o=>o.id===id);
      if(i>=0){
        orders[i].status=orders[i].status==='Pending'?'Delivered':'Pending';
        localStorage.setItem('orders',JSON.stringify(orders));
        renderAdmin();
      }
    }

    // Login modal logic
    const loginModal=document.getElementById('loginModal');
    document.getElementById('loginBtn').onclick=()=>loginModal.classList.add('active');
    document.getElementById('loginCancel').onclick=()=>loginModal.classList.remove('active');
    document.getElementById('loginForm').onsubmit=e=>{
      e.preventDefault();
      const email=document.getElementById('loginEmail').value.trim();
      const pass=document.getElementById('loginPass').value.trim();
      if(email==='admin@hf.com' && pass==='1234'){
        alert('Login successful!');
        loginModal.classList.remove('active');
      } else {
        alert('Invalid credentials (use admin@hf.com / 1234 for demo)');
      }
    };

    document.getElementById('adminBtn').onclick=()=>{
      document.getElementById('mainView').style.display='none';
      document.getElementById('adminView').style.display='block';
      renderAdmin();
    };
    document.getElementById('backBtn').onclick=()=>{
      document.getElementById('mainView').style.display='block';
      document.getElementById('adminView').style.display='none';
    };

    renderMenu();
    renderCart();
  </script>
</body>
</html>
