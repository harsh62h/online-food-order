  <!-- Login Modal -->
  <div class="modal" id="loginModal">
    <div class="modal-card">
      <h3 style="margin-top:0">Login</h3>
      <form id="loginForm">
        <div class="field"><label>Email</label><input type="email" id="loginEmail" required placeholder="you@example.com" /></div>
        <div class="field"><label>Password</label><input type="password" id="loginPass" required placeholder="••••••••" /></div>
        <div style="display:flex;gap:8px;justify-content:flex-end;margin-top:10px">
          <button type="button" class="btn small" id="loginCancel">Cancel</button>
          <button class="btn" type="submit">Login</button>
        </div>
      </form>
